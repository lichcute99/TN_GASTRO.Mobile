<Page
    x:Class="TN_GASTRO.Mobile.Presentation.Views.Home.HomePage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:TN_GASTRO.Mobile.Presentation.Views.Home"
    xmlns:utu="using:Uno.Toolkit.UI"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Màu sắc -->
        <Color x:Key="ClrHeader">#0F2C3D</Color>
        <Color x:Key="ClrOccupiedBg">#0B2432</Color>
        <Color x:Key="ClrCard">#DCE3E7</Color>

        <SolidColorBrush x:Key="BrushHeader"     Color="{StaticResource ClrHeader}" />
        <SolidColorBrush x:Key="BrushOccupiedBg" Color="{StaticResource ClrOccupiedBg}" />
        <SolidColorBrush x:Key="BrushCard"       Color="{StaticResource ClrCard}" />
        <SolidColorBrush x:Key="BrushOccupiedFg" Color="White" />
        <SolidColorBrush x:Key="BrushEmptyFg"    Color="#083A45" />

        <!-- Style chung cho tile -->
        <Style x:Key="TileButton" TargetType="Button">
            <Setter Property="MinWidth" Value="83"/>
            <Setter Property="MinHeight" Value="83"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- ==== Templates ==== -->

        <!-- Bàn có khách -->
        <DataTemplate x:Key="OccupiedTemplate">
            <Button
                Style="{StaticResource TileButton}"
                Background="{StaticResource BrushOccupiedBg}"
                Foreground="{StaticResource BrushOccupiedFg}"
                Command="{Binding DataContext.TableClickCommand, ElementName=RootPage}"
                CommandParameter="{Binding .}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tiền -->
                    <TextBlock Grid.Row="0"
                               Text="{Binding AmountText}"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,0"/>

                    <!-- Số bàn + Tên KH -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Id}"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding GuestName}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Thời gian -->
                    <TextBlock Grid.Row="2"
                               Text="{Binding ElapsedText}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,6"/>
                </Grid>
            </Button>
        </DataTemplate>

        <!-- Bàn trống (Button để click) -->
        <DataTemplate x:Key="EmptyTemplate">
            <Button
                Style="{StaticResource TileButton}"
                Background="White"
                Foreground="{StaticResource BrushEmptyFg}"
                Command="{Binding DataContext.TableClickCommand, ElementName=RootPage}"
                CommandParameter="{Binding .}">
                <TextBlock Text="{Binding Id}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </Button>
        </DataTemplate>

        <!-- Selector -->
        <local:TableDataTemplateSelector
            x:Key="TableSelector"
            EmptyTemplate="{StaticResource EmptyTemplate}"
            OccupiedTemplate="{StaticResource OccupiedTemplate}"/>
    </Page.Resources>

    <Grid Background="{StaticResource BrushHeader}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Margin="8" Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Menu -->
            <Button Width="36" Height="36" Click="Menu_Click">
                <StackPanel>
                    <Ellipse Width="8" Height="8" Fill="White"/>
                    <Ellipse Width="8" Height="8" Fill="White" Margin="0,4,0,0"/>
                    <Ellipse Width="8" Height="8" Fill="White" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>

            <!-- Badge Nhân viên -->
            <Border Grid.Column="1"
                    HorizontalAlignment="Right"
                    CornerRadius="6" Padding="10,4"
                    Background="{StaticResource BrushCard}">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Ellipse Width="6" Height="6" Fill="Lime"/>
                    <TextBlock Text="Nhân viên"/>
                </StackPanel>
            </Border>

            <!-- Bell -->
            <Button Grid.Column="2" Width="36" Height="36" Click="Bell_Click">
                <FontIcon Glyph="&#xE7E7;" Foreground="White"/>
            </Button>
        </Grid>

        <!-- Lưới bàn -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl
                ItemsSource="{Binding ViewModel.Tables, ElementName=RootPage, Mode=OneWay}"
                ItemTemplateSelector="{StaticResource TableSelector}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- DÙNG control có sẵn của WinUI thay cho Uno.Toolkit -->
                        <ItemsWrapGrid Orientation="Horizontal"
                       ItemWidth="95"
                       ItemHeight="95"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Margin" Value="8"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </ScrollViewer>

        <!-- Khu vực (đỏ) -->
        <Button Grid.Row="2" Background="#CC2E24" Foreground="White"
                Click="Area_Click" Padding="0" Height="52">
            <TextBlock Text="{Binding ViewModel.AreaTitle, ElementName=RootPage}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Button>

        <!-- Nút gộp bàn (+) nổi -->
        <Button Width="73" Height="73"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="12,60,0,0"
                Background="#5AA7D6"
                Click="Group_Click">
            <TextBlock Text="+" FontSize="28"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Button>

        <!-- Loading overlay: dùng x:Load thay cho converter -->
        <Grid x:Load="{Binding ViewModel.IsBusy, ElementName=RootPage}"
              Background="#33000000">
            <ProgressRing IsActive="True"
                          Width="40" Height="40"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
