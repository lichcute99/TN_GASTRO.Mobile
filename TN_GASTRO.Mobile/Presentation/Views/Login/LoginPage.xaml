<Page
    x:Class="TN_GASTRO.Mobile.Presentation.Views.Login.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" Spacing="8" HorizontalAlignment="Center">
            <TextBlock Text="TNKAS" FontSize="40" FontWeight="SemiBold" />
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <TextBlock Text="{x:Bind ViewModel.AppVersion}" />
                <Ellipse Width="8" Height="8" Fill="{x:Bind ViewModel.DeviceIndicatorBrush}" VerticalAlignment="Center"/>
                <TextBlock Text="{x:Bind ViewModel.DeviceNameDisplay}" />
            </StackPanel>

            <!-- ****** -->
            <Border Background="{ThemeResource TextControlBackground}"
                    Padding="16" CornerRadius="12" MinWidth="260">
                <TextBlock Text="{x:Bind ViewModel.MaskedPassword}" 
                           HorizontalAlignment="Center"
                           FontSize="28" FontWeight="Bold" />
            </Border>
        </StackPanel>

        <!-- Numpad -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,12,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!-- Row 1 -->
            <Button Grid.Row="0" Grid.Column="0" Content="7"
                    Command="{x:Bind ViewModel.TapDigitCommand}" CommandParameter="7" />
            <Button Grid.Row="0" Grid.Column="1" Content="8"
                    Command="{x:Bind ViewModel.TapDigitCommand}" CommandParameter="8" />
            <Button Grid.Row="0" Grid.Column="2" Content="9"
                    Command="{x:Bind ViewModel.TapDigitCommand}" CommandParameter="9" />

            <!-- Row 2 -->
            <Button Grid.Row="1" Grid.Column="0" Content="4"
                    Command="{x:Bind ViewModel.TapDigitCommand}" CommandParameter="4" />
            <Button Grid.Row="1" Grid.Column="1" Content="5"
                    Command="{x:Bind ViewModel.TapDigitCommand}" CommandParameter="5" />
            <Button Grid.Row="1" Grid.Column="2" Content="6"
                    Command="{x:Bind ViewModel.TapDigitCommand}" CommandParameter="6" />

            <!-- Row 3 -->
            <Button Grid.Row="2" Grid.Column="0" Content="1"
                    Command="{x:Bind ViewModel.TapDigitCommand}" CommandParameter="1" />
            <Button Grid.Row="2" Grid.Column="1" Content="2"
                    Command="{x:Bind ViewModel.TapDigitCommand}" CommandParameter="2" />
            <Button Grid.Row="2" Grid.Column="2" Content="3"
                    Command="{x:Bind ViewModel.TapDigitCommand}" CommandParameter="3" />

            <!-- Row 4 -->
            <Button Grid.Row="3" Grid.Column="0" Content="0"
                    Command="{x:Bind ViewModel.TapDigitCommand}" CommandParameter="0" />
            <Button Grid.Row="3" Grid.Column="1" Content="⌫"
                    Command="{x:Bind ViewModel.BackspaceCommand}" />
            <Button Grid.Row="3" Grid.Column="2" Content="{x:Bind ViewModel.LoginText}"
                    Command="{x:Bind ViewModel.LoginCommand}" />
        </Grid>

        <!-- Footer: 2 nút phụ -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16" Margin="0,16,0,24">
            <Button Content="🌐" Width="64" Height="48"
                    Command="{x:Bind ViewModel.OpenLanguageDialogRequested}" />
            <Button Content="Đăng ký thiết bị" 
                    Command="{x:Bind ViewModel.OpenRegisterDialogRequested}" />
        </StackPanel>
    </Grid>
</Page>
